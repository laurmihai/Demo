<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/offer_iem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_edit_text"
    android:layout_margin="@dimen/com_facebook_tooltip_horizontal_padding"
    android:layoutDirection="inherit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_offer_button"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/lee_cooper_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lee_cooper"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fab_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lee Cooper"
                android:layout_toRightOf="@+id/lee_cooper_image"
                android:textColor="@color/lightBlack"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/fab_margin" />
            <Button
                android:id="@+id/button_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_offer_button"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingRight="@dimen/fab_margin"
                android:visibility="gone"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow2_grey"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/fab_margin"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/main_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_layout"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/main_offer_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/main_offer"
            android:background="@drawable/main_offer_bottom"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/detail_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/love_points"
                    android:paddingLeft="@dimen/margins_sides"/>

                <ImageButton
                    android:id="@+id/link_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:src="@drawable/videos_button" />

                <ImageButton
                    android:id="@+id/gps_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:src="@drawable/gps_button" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>